{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "build",
      "module": "es6",
      "target": "es5",
      "lib": ["es6", "dom", "es2016", "es2017"],
      "sourceMap": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "build",
      "src/**/*.stories.tsx",
      "src/**/*.test.tsx"
    ]
  }